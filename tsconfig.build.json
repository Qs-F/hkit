{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist/",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "/*": ["./*"]
    }
  },
  "include": [
    "src",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "examples",
    "src/**/*.test.ts"
  ]
}
